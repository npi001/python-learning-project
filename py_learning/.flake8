[flake8]
max-line-length = 88
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache,
    htmlcov,
    .coverage
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811

# 错误代码说明：
# E203: whitespace before ':'
# W503: line break before binary operator
# E501: line too long
# F401: imported but unused
# F811: redefinition of unused name